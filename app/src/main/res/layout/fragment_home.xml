<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/recycler_view"
        tools:context=".MainActivity"
        android:scrollbars="vertical">
    <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:text="服务器交互方法验证演示"/>

    <EditText
        android:id="@+id/edit_text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入服务器地址"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/get_trams_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取硬件"/>
        <Button
            android:id="@+id/update_number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新号码"/>
        <Button
            android:id="@+id/upload_gps_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传坐标"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/upload_notify_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上报告警"/>
        <Button
            android:id="@+id/push_message_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息推送"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="服务器返回数据包内容"/>

    <TextView
        android:id="@+id/get_content_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"/>

    <TextView
        android:id="@+id/method_get_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"/>

    <TextView
        android:id="@+id/status_get_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"/>

    <TextView
        android:id="@+id/device_id_get_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"/>

    <TextView
        android:id="@+id/send_sentence_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="服务器发送数据包内容"/>
  </LinearLayout>
</ScrollView>