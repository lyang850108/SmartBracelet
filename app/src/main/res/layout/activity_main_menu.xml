<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.smartbracelet.com.smartbracelet.activity.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/blue_500"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_startup"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTT社区矫正客户端"
            android:textAppearance="@style/ItemTitleTextStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="@string/main_menu_camera"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="@string/main_menu_location"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="@string/main_menu_inbox"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="@string/main_menu_wireless"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="@string/main_menu_clockin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0"
            android:visibility="invisible">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="设置"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/test_fab"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_500"
        android:layout_gravity="center_horizontal"
        android:text="退出系统"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="80dp"/>

</LinearLayout>
