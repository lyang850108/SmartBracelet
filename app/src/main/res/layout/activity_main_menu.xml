<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smartbracelet.com.smartbracelet.activity.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/main_menu_margin_gap"
        android:background="@mipmap/bg_main_menu"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/utt_log" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="UTT社区矫正客户端"
            android:textAppearance="@style/ItemTitleTextStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_menu_margin_gap"
            android:layout_weight="1"
            android:background="@mipmap/bg_main_menu">

            <ImageView
                android:id="@+id/func1"
                android:layout_width="@dimen/main_menu_ima_size"
                android:layout_height="@dimen/main_menu_ima_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/image_camera_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摄像头验证"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/func1"
                android:textColor="@android:color/white"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_menu_margin_gap"
            android:layout_weight="1"
            android:background="@mipmap/bg_main_menu"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/func2"
                    android:layout_width="@dimen/main_menu_ima_size"
                    android:layout_height="@dimen/main_menu_ima_size"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image_location_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实时定位"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/func2"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>



            <View
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_gravity="center_horizontal"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/func3"
                    android:layout_width="@dimen/main_menu_ima_size"
                    android:layout_height="@dimen/main_menu_ima_size"
                    android:layout_marginLeft="@dimen/main_menu_margin_gap"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image_sb_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智能手环"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/func3"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_menu_margin_gap"
            android:layout_weight="1"
            android:background="@mipmap/bg_main_menu"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/func4"
                    android:layout_width="@dimen/main_menu_ima_size"
                    android:layout_height="@dimen/main_menu_ima_size"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image_inbox_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收件箱"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/func4"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>



            <View
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_gravity="center_horizontal"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/func5"
                    android:layout_width="@dimen/main_menu_ima_size"
                    android:layout_height="@dimen/main_menu_ima_size"
                    android:layout_marginLeft="@dimen/main_menu_margin_gap"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image_checkin_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打卡"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/func5"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
