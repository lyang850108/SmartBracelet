<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.smartbracelet.com.smartbracelet.activity.MainMenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="无线手环"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="消息中心"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="联系"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="报警"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="实时定位"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_menu_button_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_startup"
                android:id="@+id/func6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MainMenuButtonTextStyle"
                android:text="设置"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/test_fab"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_500"
        android:layout_gravity="center_horizontal"
        android:text="退出系统"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="140dp"/>

</LinearLayout>
